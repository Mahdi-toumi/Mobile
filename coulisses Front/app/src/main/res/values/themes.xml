<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Coulisses" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Couleurs personnalisées -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>

        <!-- Polices -->
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.App.Headline</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.Body1</item>

        <!-- Boutons -->
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/purple_500</item>
        <item name="strokeColor">@color/purple_500</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.Coulisses.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Text appearances personnalisées -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/playfair_display</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textTertiary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textCaption</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
    </style>

    <style name="TextAppearance.App.Subhead" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RoundedCornersLarge" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Version valide pour Material Components -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Taille uniforme pour tous les coins -->
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Title.Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/playfair_display</item>
    </style>

    <style name="TextAppearance.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/playfair_display</item>
    </style>

    <style name="TextAppearance.Body.Small" parent="TextAppearance.Material3.BodySmall"/>

    <style name="TextAppearance.Label.Medium" parent="TextAppearance.Material3.LabelMedium"/>

    <!-- Formes -->
    <style name="ShapeAppearance.Image.Rounded" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.SearchBar" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
