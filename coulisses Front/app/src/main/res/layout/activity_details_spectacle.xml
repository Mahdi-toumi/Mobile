<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1B2E"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Image avec coins arrondis -->
        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            app:srcCompat="@drawable/default_image" />

        <!-- Titre du spectacle -->
        <TextView
            android:id="@+id/detailTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E6DAF9"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/playfair_display"
            android:layout_marginBottom="8dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/detailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B39DDB"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Heure -->
        <TextView
            android:id="@+id/detailHeure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B39DDB"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Ville -->
        <TextView
            android:id="@+id/detailVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A094B7"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Description avec fond adouci -->
        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="#29243A"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:elevation="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</ScrollView>
